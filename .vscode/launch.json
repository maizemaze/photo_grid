    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Console App",
            "type": "python",
            "request": "launch",
            "stopOnEntry": true,
            "program": "${file}",
            "externalConsole": true,
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit"
            ],
            "env": {},
            "envFile": "${workspaceRoot}/.env",
            "console": "integratedTerminal",
            "pythonPath": "${config:python.pythonPath}"
            // "pythonPath": "/usr/local/bin/python3"
            // "pythonPath": "${workspaceRoot}"
        }
    ]
}

// ${workspaceRoot}